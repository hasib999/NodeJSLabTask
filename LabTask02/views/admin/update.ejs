<!DOCTYPE html>
<html>
<head>
	<title>Update Page</title>
</head>
<body>
		<form method="post">
			<fieldset>
				<legend>Update Employee</legend>
				<table>
                    <tr>
                        <td>ID</td>
                        <td><%= id %></td>
                    </tr>
					<tr>
						<td>EmpName</td>
						<td><input type="text" name="EmpName" value="<%=EmpName%>"></td>
                    </tr>
                    <tr>
						<td>EmpPhone</td>
						<td><input type="text" name="EmpPhone" value="<%=EmpPhone%>"></td>
                    </tr>
                    <tr>
						<td>EmpAddress</td>
						<td><input type="text" name="EmpAddress" value="<%=EmpAddress%>"></td>
                    </tr>
                    <tr>
						<td>EmpGender</td>
						<td><input type="text" name="EmpGender" value="<%=EmpGender%>"></td>
                    </tr>
                    <tr>
						<td>EmpDesignation</td>
						<td><select name="EmpDesignation" value="<%=EmpDesignation%>">
                            <option value="Manager">Manager</option>
                            <option value="Worker">Worker</option>
                          </select></td>
					</tr><br>
					
					<tr>
						<td></td>
						<td><input type="submit" name="submit" value="Update"></td>
					</tr>
                </table>
                <a href="/logout">Logout</a>
			</fieldset>
		</form>
</body>
</html>